# Многоэтапная сборка для Telegram бота
FROM golang:1.24-alpine AS builder

WORKDIR /app

# Копируем зависимости
COPY go.mod go.sum ./
RUN go mod download

# Копируем исходный код
COPY . .

# Собираем бинарник бота
RUN CGO_ENABLED=0 GOOS=linux go build -o crypto-bot ./cmd/bot

# Финальный образ (минимальный)
FROM alpine:latest
RUN apk --no-cache add ca-certificates tzdata

WORKDIR /root/
COPY --from=builder /app/crypto-bot .

# Запускаем бота
CMD ["./crypto-bot"]
